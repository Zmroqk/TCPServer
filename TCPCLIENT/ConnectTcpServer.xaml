<UserControl x:Class="TCPCLIENT.ConnectTcpServer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCPCLIENT"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="240">
    <Grid>
        <TextBox x:Name="TxbIpAddress" HorizontalAlignment="Left" Margin="10,10,0,0" Text="192.168.1.8" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Click="Connect_Click" Content="Connect" HorizontalAlignment="Left" Margin="135,10,0,0" VerticalAlignment="Top" Width="86" Height="18" Background="{Binding ConnectionColor}"/>
    </Grid>
</UserControl>
